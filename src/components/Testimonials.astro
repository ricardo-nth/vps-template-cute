---
/**
 * Testimonials.astro - Testimonials section (BeyondFS style)
 * 
 * Horizontal scrolling cards with light mint background, quotes,
 * role/company info, and arrow navigation.
 */

import Eyebrow from './Eyebrow.astro';

interface Testimonial {
  quote: string;
  role: string;
  company: string;
}

interface Props {
  eyebrow?: string;
  heading?: string;
  intro?: string;
  testimonials?: Testimonial[];
  sectionId?: string;
}

const {
  eyebrow = "TESTIMONIALS",
  heading = "What our clients say",
  intro = "Don't just take our word for it - hear from the people we've helped.",
  sectionId = "testimonials",
  testimonials = [
    {
      quote: "[Client testimonial - what they loved about working with you and the results they achieved]",
      role: "[Client Role]",
      company: "[Location or Company]"
    },
    {
      quote: "[Client testimonial - specific praise for your service quality or team]",
      role: "[Client Role]",
      company: "[Location or Company]"
    },
    {
      quote: "[Client testimonial - how you solved their problem or exceeded expectations]",
      role: "[Client Role]",
      company: "[Location or Company]"
    },
    {
      quote: "[Client testimonial - the difference your service made to their situation]",
      role: "[Client Role]",
      company: "[Location or Company]"
    },
  ],
} = Astro.props as Props;
---

<section id={sectionId} class="bg-background py-20 lg:py-32">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header with dash -->
    <div class="mb-12">
      <Eyebrow text={eyebrow} />
      <h2 class="text-3xl sm:text-4xl font-bold text-foreground tracking-tight mb-4">
        {heading}
      </h2>
      <p class="text-muted-foreground text-lg">
        {intro}
      </p>
    </div>

    <!-- Testimonials Carousel Container -->
    <div class="relative">
      <!-- Cards Container - Horizontal Scroll -->
      <div 
        id="testimonials-track"
        class="flex gap-6 overflow-x-auto pb-4 snap-x snap-mandatory scrollbar-hide"
        style="scroll-behavior: smooth;"
      >
        {testimonials.map((testimonial) => (
          <div class="flex-shrink-0 w-[320px] sm:w-[380px] snap-start">
            <div class="bg-primary/10 rounded-lg p-8 h-full flex flex-col">
              <!-- Quote -->
              <p class="text-foreground text-base leading-relaxed mb-8 flex-grow">
                "{testimonial.quote}"
              </p>
              
              <!-- Divider line -->
              <span class="block w-8 h-0.5 bg-foreground mb-4"></span>
              
              <!-- Attribution -->
              <div>
                <p class="font-bold text-foreground text-sm">{testimonial.role}</p>
                <p class="text-muted-foreground text-sm">{testimonial.company}</p>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Navigation Arrows -->
      <div class="flex justify-end gap-2 mt-6">
        <button
          id="prev-btn"
          class="w-12 h-12 rounded-full border-2 border-foreground flex items-center justify-center text-foreground hover:bg-foreground hover:text-background transition-colors"
          aria-label="Previous testimonial"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
          </svg>
        </button>
        <button
          id="next-btn"
          class="w-12 h-12 rounded-full border-2 border-foreground flex items-center justify-center text-foreground hover:bg-foreground hover:text-background transition-colors"
          aria-label="Next testimonial"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  const track = document.getElementById('testimonials-track');
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');
  const cardWidth = 400; // Approximate card width + gap

  prevBtn?.addEventListener('click', () => {
    track?.scrollBy({ left: -cardWidth, behavior: 'smooth' });
  });

  nextBtn?.addEventListener('click', () => {
    track?.scrollBy({ left: cardWidth, behavior: 'smooth' });
  });
</script>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>


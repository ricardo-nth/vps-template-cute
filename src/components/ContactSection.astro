---
import Icon from './Icon.astro';
import Eyebrow from './Eyebrow.astro';

interface Props {
  heading?: string;
  intro?: string;
  phoneLabel?: string;
  phoneHref?: string;
  emailLabel?: string;
  emailHref?: string;
  address?: string;
}

const {
  heading = "Get in touch today",
  intro = "Our friendly team is here to answer your questions and help you get started. Reach out and let us know how we can help.",
  phoneLabel = "[Your Phone]",
  phoneHref = "tel:+44XXXXXXXXXX",
  emailLabel = "[email]@yourdomain.co.uk",
  emailHref = "mailto:[email]@yourdomain.co.uk",
  address = "[Your City, Region]"
} = Astro.props as Props;
---

<section class="relative py-28 lg:py-40 overflow-hidden" id="contact">
  <!-- Gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-accent-secondary via-accent-secondary to-primary/40"></div>

  <!-- Curved shape at top -->
  <div class="absolute top-0 left-0 right-0">
    <svg viewBox="0 0 1440 120" class="w-full h-auto" preserveAspectRatio="none">
      <path d="M0,120 C360,40 720,100 1080,20 C1260,-20 1380,40 1440,60 L1440,0 L0,0 Z" fill="white" />
    </svg>
  </div>

  <!-- Large curved accent shape -->
  <div class="absolute -bottom-20 -right-20 w-[700px] h-[700px]">
    <svg viewBox="0 0 400 400" class="w-full h-full" fill="none">
      <path d="M400,200 C400,310 310,400 200,400 C90,400 0,310 0,200 C0,90 90,0 200,0 C310,0 400,90 400,200 Z" fill="url(#gradient1)" opacity="0.4" />
      <defs>
        <linearGradient id="gradient1" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:var(--accent);stop-opacity:0.1" />
          <stop offset="100%" style="stop-color:var(--accent);stop-opacity:0.1" />
        </linearGradient>
      </defs>
    </svg>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16 lg:gap-20 items-center">
      <!-- Text Content -->
      <div class="text-center lg:text-left">
        <!-- Eyebrow -->
        <Eyebrow text="Get in Touch" />

        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground tracking-tight text-balance mb-6">
          {heading}
        </h2>
        <p class="text-lg text-foreground/70 text-balance leading-relaxed mb-10 max-w-xl">
          {intro}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a
            href={phoneHref}
            class="group inline-flex items-center justify-center gap-3 rounded-full bg-teal px-8 py-4 text-lg font-bold text-white shadow-xl shadow-teal/25 transition-all duration-300 hover:shadow-2xl hover:shadow-teal/30 hover:-translate-y-1 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-teal focus-visible:ring-offset-2"
          >
            <span class="p-1 bg-white/20 rounded-full">
              <Icon name="tabler:phone" size="20" />
            </span>
            Call: {phoneLabel}
          </a>
          <a
            href={emailHref}
            class="group inline-flex items-center justify-center gap-3 rounded-full bg-white/80 backdrop-blur-sm border-2 border-teal/20 px-8 py-4 text-lg font-semibold text-foreground shadow-lg transition-all duration-300 hover:bg-white hover:border-teal/40 hover:-translate-y-1 hover:shadow-xl focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-teal focus-visible:ring-offset-2"
          >
            <span class="p-1 bg-teal/10 rounded-full text-teal">
              <Icon name="tabler:mail" size="20" />
            </span>
            Email Us
          </a>
        </div>
      </div>

      <!-- Contact Cards Stack -->
      <div class="relative">
        <!-- Decorative background card -->
        <div class="absolute -inset-4 bg-gradient-to-br from-teal/20 to-primary/20 rounded-3xl blur-xl"></div>

        <div class="relative grid gap-5">
          <!-- Office Card -->
          <div class="group bg-white/90 backdrop-blur-md rounded-[2.5rem] p-8 shadow-xl border border-white/50 transition-all duration-300 hover:bg-white hover:shadow-2xl hover:-translate-y-1">
            <div class="flex items-start gap-5">
              <div class="flex-shrink-0 p-4 bg-gradient-to-br from-teal/10 to-primary/10 rounded-xl group-hover:from-teal/20 group-hover:to-primary/20 transition-colors">
                <Icon name="tabler:map-pin" size="28" class="text-teal" />
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-foreground mb-2">Head Office</h3>
                <p class="text-muted-foreground leading-relaxed">
                  {address}
                </p>
                <a href="#" class="inline-flex items-center gap-1 mt-4 text-sm font-semibold text-teal hover:gap-2 transition-all">
                  Get Directions
                  <Icon name="tabler:arrow-right" size="16" />
                </a>
              </div>
            </div>
          </div>

          <!-- Hours Card -->
          <div class="group bg-white/90 backdrop-blur-md rounded-[2.5rem] p-8 shadow-xl border border-white/50 transition-all duration-300 hover:bg-white hover:shadow-2xl hover:-translate-y-1">
            <div class="flex items-start gap-5">
              <div class="flex-shrink-0 p-4 bg-gradient-to-br from-teal/10 to-primary/10 rounded-xl group-hover:from-teal/20 group-hover:to-primary/20 transition-colors">
                <Icon name="tabler:clock-hour-4" size="28" class="text-teal" />
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-foreground mb-3">Office Hours</h3>
                <ul class="space-y-2">
                  <li class="flex justify-between gap-6 text-sm">
                    <span class="text-muted-foreground">Monday - Friday</span>
                    <span class="font-semibold text-foreground">9:00 AM - 6:00 PM</span>
                  </li>
                  <li class="flex justify-between gap-6 text-sm">
                    <span class="text-muted-foreground">Saturday</span>
                    <span class="font-semibold text-foreground">10:00 AM - 4:00 PM</span>
                  </li>
                  <li class="flex justify-between gap-6 text-sm">
                    <span class="text-muted-foreground">Sunday</span>
                    <span class="font-semibold text-foreground">Closed</span>
                  </li>
                </ul>
                <div class="mt-4 flex items-center gap-2 text-xs text-teal bg-teal/5 px-3 py-2 rounded-lg border border-teal/10">
                  <Icon name="tabler:clock-24" size="14" />
                  <span>Emergency support available 24/7 for existing clients</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

---
interface Props {
  text: string;
  align?: 'left' | 'center';
  class?: string;
}

const { text, align = 'left', class: className } = Astro.props;
---

<div class:list={[
  "flex flex-col mb-6",
  align === 'center' ? "items-center text-center" : "items-start text-left",
  className
]}>
  <span class="block w-12 h-0.5 bg-teal mb-4"></span>
  <span class="text-sm font-bold tracking-widest text-teal uppercase">
    {text}
  </span>
</div>
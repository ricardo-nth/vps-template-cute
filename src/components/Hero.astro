---
interface Props {
  heading?: string;
  subheading?: string;
  imageSrc?: string;
  imageAlt?: string;
  ctaText?: string;
  ctaHref?: string;
  socialProofText?: string;
  rating?: string;
}

const {
  heading = "[Your Main Headline - What You Do]",
  subheading = "[Your value proposition - describe your services and who you serve in 1-2 sentences]",
  imageSrc = "https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80",
  imageAlt = "[Describe your hero image]",
  ctaText = "Get in Touch",
  ctaHref = "/contact",
  socialProofText = "[Your trust badge or tagline]",
  rating = "5.0",
} = Astro.props as Props;
---

<section class="relative overflow-hidden bg-accent-secondary/30">
  <div class="max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 min-h-[70vh] lg:min-h-[80vh]">

      <!-- Content Column -->
      <div class="flex flex-col justify-center px-6 sm:px-12 lg:px-16 py-16 lg:py-24">
        <div class="max-w-xl">
          <!-- Heading -->
          <h1 class="text-4xl sm:text-5xl lg:text-[3.5rem] font-bold leading-[1.1] tracking-tight text-foreground mb-6">
            {heading}
          </h1>

          <!-- Subheading -->
          <p class="text-lg sm:text-xl text-muted-foreground leading-relaxed mb-8">
            {subheading}
          </p>

          <!-- CTA Button -->
          <a
            href={ctaHref}
            class="inline-flex items-center justify-center rounded-full bg-primary px-8 py-4 text-base font-semibold text-primary-foreground shadow-lg transition-all hover:bg-primary/90 hover:scale-105 mb-10"
          >
            {ctaText}
          </a>

          <!-- Social Proof -->
          <div class="flex items-center gap-4">
            <!-- Star Rating -->
            <div class="flex items-center gap-1">
              {[1, 2, 3, 4, 5].map(() => (
                <svg class="w-5 h-5 text-accent fill-current" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
              <span class="ml-2 font-bold text-foreground">{rating}</span>
            </div>

            <!-- Divider -->
            <span class="w-px h-6 bg-foreground/20"></span>

            <!-- Trust Text -->
            <span class="text-sm text-muted-foreground">{socialProofText}</span>
          </div>
        </div>
      </div>

      <!-- Image Column with Circular Design -->
      <div class="relative flex items-center justify-center py-12 lg:py-0 px-6 lg:px-0">
        <!-- Large teal circle background (positioned behind and to the left) -->
        <div
          class="absolute w-[85%] aspect-square rounded-full bg-teal/40"
          style="left: 5%; top: 50%; transform: translateY(-50%);"
        ></div>

        <!-- Smaller accent circle background -->
        <div
          class="absolute w-[40%] aspect-square rounded-full bg-accent/20"
          style="right: -10%; top: 10%;"
        ></div>

        <!-- Even smaller primary circle background -->
        <div
          class="absolute w-[25%] aspect-square rounded-full bg-primary/20"
          style="left: -10%; bottom: 10%;"
        ></div>

        <!-- Circular image (overlapping the mint circle) -->
        <div class="relative w-[80%] aspect-square max-w-[500px]">
          <img
            src={imageSrc}
            alt={imageAlt}
            class="w-full h-full object-cover rounded-full"
            loading="eager"
          />
        </div>
      </div>

    </div>
  </div>
</section>
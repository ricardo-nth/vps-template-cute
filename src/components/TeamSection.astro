---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import Eyebrow from './Eyebrow.astro';
import teamPortrait from '@assets/images/team-portrait.jpg';

interface TeamMember {
  name: string;
  role: string;
  description: string;
  image: any;
  imageAlt?: string;
  credentials?: string;
}

interface Props {
  eyebrow?: string;
  heading?: string;
  intro?: string;
  members?: TeamMember[];
}

const {
  eyebrow,
  heading = "Meet our leadership team",
  intro = "Our team combines decades of clinical expertise with a deep commitment to compassionate care. We are dedicated to setting the highest standards in the industry.",
  members = [
    {
      name: "Dr. Amina Patel",
      role: "Clinical Director",
      credentials: "MBBS, MRCGP",
      description: "With over 15 years of experience in palliative medicine, Dr. Patel leads our clinical strategy with a focus on holistic patient well-being.",
      image: teamPortrait,
      imageAlt: "Dr. Amina Patel",
    },
    {
      name: "James Miller",
      role: "Head of Nursing",
      credentials: "RN, MSc Advanced Practice",
      description: "James oversees our nursing teams, ensuring that every patient receives safe, effective, and dignified care at home.",
      image: teamPortrait,
      imageAlt: "James Miller",
    },
    {
      name: "Grace Okafor",
      role: "Operations Manager",
      credentials: "MBA, Health Management",
      description: "Grace ensures the smooth running of our services, coordinating complex care packages and maintaining our CQC compliance.",
      image: teamPortrait,
      imageAlt: "Grace Okafor",
    },
  ],
} = Astro.props as Props;
---

<section class="bg-background py-24 lg:py-32" id="team">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center mb-16 flex flex-col items-center">
      {eyebrow && <Eyebrow text={eyebrow} align="center" />}
      <h2 class="text-3xl sm:text-4xl font-bold text-foreground tracking-tight text-balance mb-6">
        {heading}
      </h2>
      <p class="text-lg text-muted-foreground text-balance leading-relaxed">
        {intro}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
      {members.map((member) => (
        <div class="group relative">
          <!-- Image Container -->
          <div class="relative aspect-[3/3.2] overflow-hidden rounded-2xl bg-muted mb-6">
            <Image
              src={member.image}
              alt={member.imageAlt || member.name}
              class="h-full w-full object-cover transition-all duration-700 group-hover:scale-105"
            />
            <!-- Primary Overlay (Replaces Grayscale) -->
            <div class="absolute inset-0 bg-primary/40 mix-blend-color opacity-100 group-hover:opacity-0 transition-opacity duration-700"></div>
            
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <!-- Social/Contact Overlay (Optional) -->
            <div class="absolute bottom-4 left-4 right-4 translate-y-full group-hover:translate-y-0 transition-transform duration-500">
              <div class="flex justify-center gap-2">
                <a href="#" class="p-2 bg-white/20 backdrop-blur-md rounded-full text-white hover:bg-white hover:text-primary transition-colors" aria-label={`${member.name}'s LinkedIn profile (coming soon)`}>
                  <span class="sr-only">LinkedIn</span>
                  <Icon name="tabler:brand-linkedin" size="20" />
                </a>
              </div>
            </div>
          </div>

          <!-- Content -->
          <div class="text-center">
            <h3 class="text-xl font-bold text-foreground mb-1 group-hover:text-teal transition-colors">
              {member.name}
            </h3>
            <p class="text-sm font-medium text-teal uppercase tracking-wider mb-3">
              {member.role} <span class="text-muted-foreground normal-case font-normal">| {member.credentials}</span>
            </p>
            <p class="text-muted-foreground leading-relaxed">
              {member.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

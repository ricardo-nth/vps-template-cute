---
import SiteLayout from '@layouts/SiteLayout.astro';
import { getEntry } from 'astro:content';
import PageHero from '@components/PageHero.astro';
import WhyChooseUs from '@components/WhyChooseUs.astro';
import ClientJourney from '@components/ClientJourney.astro';
import ContactSection from '@components/ContactSection.astro';
import unsplashApproach from '@assets/images/unsplash-approach.jpg';

const modelEntry = await getEntry('cuteServiceModel', 'default');
const modelDomEntry = await getEntry('cuteServiceModel', 'dom-care');
if (!modelEntry) {
  throw new Error('Missing content entry: cuteServiceModel/default');
}
if (!modelDomEntry) {
  throw new Error('Missing content entry: cuteServiceModel/dom-care');
}

const profiles = [
  { key: 'supported-living', content: modelEntry.data },
  { key: 'dom-care', content: modelDomEntry.data },
] as const;

// Image mapping
const imageMap: Record<string, ImageMetadata> = {
  'unsplash-approach': unsplashApproach,
};
---

<SiteLayout metadata={modelEntry.data.metadata}>
  <div data-care-profile-switcher>
    {profiles.map(({ key, content }) => (
      <div data-care-profile-panel={key} class:list={{ hidden: key !== 'supported-living' }}>
        <PageHero
          heading={content.hero.heading}
          subheading={content.hero.subheading}
          primaryCtaText={content.hero.primaryCtaText}
          primaryCtaHref={content.hero.primaryCtaHref}
          secondaryCtaText={content.hero.secondaryCtaText}
          secondaryCtaHref={content.hero.secondaryCtaHref}
          imageSrc={imageMap[content.hero.imageKey] || unsplashApproach}
          imageAlt={content.hero.imageAlt}
        />

        <WhyChooseUs
          heading={content.whyChooseUs.heading}
          points={content.whyChooseUs.points}
          id="values"
        />

        <ClientJourney
          heading={content.clientJourney.heading}
          subheading={content.clientJourney.subheading}
          steps={content.clientJourney.steps}
        />

        <ContactSection
          heading={content.contactSection.heading}
          intro={content.contactSection.intro}
          phoneLabel={content.contactSection.phoneLabel}
          phoneHref={content.contactSection.phoneHref}
          emailLabel={content.contactSection.emailLabel}
          emailHref={content.contactSection.emailHref}
          address={content.contactSection.address}
        />
      </div>
    ))}
  </div>
</SiteLayout>

---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import SiteLayout from '@layouts/SiteLayout.astro';
import TeamSection from '@components/TeamSection.astro';
import PageHero from '@components/PageHero.astro';
import Eyebrow from '@components/Eyebrow.astro';
import { getEntry } from 'astro:content';
import aboutTeam from '@assets/images/about-team.jpg';
import residentialCare from '@assets/images/residential-care.jpg';
import unsplashApproach from '@assets/images/unsplash-approach.jpg';

const aboutEntry = await getEntry('cuteAbout', 'default');
const aboutDomEntry = await getEntry('cuteAbout', 'dom-care');
if (!aboutEntry) {
  throw new Error('Missing content entry: cuteAbout/default');
}
if (!aboutDomEntry) {
  throw new Error('Missing content entry: cuteAbout/dom-care');
}

const profiles = [
  { key: 'supported-living', content: aboutEntry.data },
  { key: 'dom-care', content: aboutDomEntry.data },
] as const;

// Image mapping
const imageMap: Record<string, ImageMetadata> = {
  'about-team': aboutTeam,
  'residential-care': residentialCare,
  'unsplash-approach': unsplashApproach,
};
---

<SiteLayout metadata={aboutEntry.data.metadata}>
  <div data-care-profile-switcher>
    {profiles.map(({ key, content }) => (
      <div data-care-profile-panel={key} class:list={{ hidden: key !== 'supported-living' }}>
        <PageHero
          heading={content.hero.heading}
          subheading={content.hero.subheading}
          primaryCtaText={content.hero.primaryCtaText}
          primaryCtaHref={content.hero.primaryCtaHref}
          secondaryCtaText={content.hero.secondaryCtaText}
          secondaryCtaHref={content.hero.secondaryCtaHref}
          imageSrc={imageMap[content.hero.imageKey] || unsplashApproach}
          imageAlt={content.hero.imageAlt}
        >
          <div slot="visual" class="grid grid-cols-2 gap-4 sm:gap-6">
            {content.stats.map((stat) => (
              <div class="bg-white/60 backdrop-blur-md border border-white/50 rounded-[2.5rem] p-6 text-center hover:bg-white hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 shadow-xl">
                <div class="text-3xl sm:text-4xl font-bold text-teal mb-2">{stat.value}</div>
                <div class="text-sm sm:text-base text-muted-foreground font-medium">{stat.label}</div>
              </div>
            ))}
          </div>
        </PageHero>

        {/* Our Story Section */}
        <section id="story">
          {/* Origin Story Block */}
          <div class="grid lg:grid-cols-2">
            <div class="flex items-center order-2 lg:order-1 bg-background p-12 lg:p-24">
              <div>
                <Eyebrow text={content.originStory.eyebrow} />
                <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-6">{content.originStory.heading}</h2>
                <p class="text-lg text-muted-foreground leading-relaxed">
                  {content.originStory.text}
                </p>
              </div>
            </div>
            <div class="relative h-full min-h-[400px] order-1 lg:order-2">
              <Image
                src={imageMap[content.originStory.imageKey] || aboutTeam}
                alt="Office environment"
                class="absolute inset-0 w-full h-full object-cover"
              />
            </div>
          </div>

          {/* Mission Story Block */}
          <div class="grid lg:grid-cols-2">
            <div class="relative h-full min-h-[400px]">
              <Image
                src={imageMap[content.missionStory.imageKey] || residentialCare}
                alt="Care team collaboration"
                class="absolute inset-0 w-full h-full object-cover"
              />
            </div>
            <div class="flex items-center bg-muted/30 p-12 lg:p-24">
              <div>
                <Eyebrow text={content.missionStory.eyebrow} />
                <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-6">{content.missionStory.heading}</h2>
                <p class="text-lg text-muted-foreground leading-relaxed">
                  {content.missionStory.text}
                </p>
              </div>
            </div>
          </div>
        </section>

        {/* Values Section */}
        <section class="py-24 bg-secondary/30">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center max-w-3xl mx-auto mb-16 flex flex-col items-center">
              <Eyebrow text="Our Values" align="center" />
              <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-6">Our Core Values</h2>
              <p class="text-lg text-muted-foreground">
                These principles guide every interaction, every care plan, and every decision we make. They are the foundation of our service.
              </p>
            </div>

            <div class="grid md:grid-cols-2 gap-px bg-border border border-border rounded-[2.5rem] overflow-hidden shadow-2xl">
              {content.values.map((value, index) => (
                <div class={[`p-8 lg:p-12 flex flex-col h-full transition-colors duration-300 group`, index === 0 || index === 3 ? `bg-muted hover:bg-card` : `bg-card hover:bg-muted`].join(' ')}>
                  <div class="w-14 h-14 bg-primary rounded-2xl flex items-center justify-center mb-6 text-black transition-all duration-300 group-hover:scale-110 group-hover:rotate-3 transform">
                    <Icon name={`tabler:${value.icon === 'award' ? 'medal' : value.icon}`} size="28" />
                  </div>
                  <h3 class="text-2xl font-bold text-foreground mb-3">{value.title}</h3>
                  <p class="text-muted-foreground leading-relaxed">
                    {value.description}
                  </p>
                </div>
              ))}
            </div>
          </div>
        </section>

        {/* TeamSection - Reusing existing component */}
        <TeamSection
          eyebrow={content.team.eyebrow}
          heading={content.team.heading}
          intro={content.team.intro}
        />

        {/* CTA Section */}
        <section class="py-20 bg-primary text-primary-foreground">
          <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl sm:text-4xl font-bold mb-6">{content.cta.heading}</h2>
            <p class="text-xl opacity-90 mb-10 max-w-2xl mx-auto">
              {content.cta.description}
            </p>
            <a href="https://vertexplatformsolutions.com/offers/healthcare-agencies" target="_blank" rel="noopener" class="inline-block bg-accent text-accent-foreground font-bold py-4 px-10 rounded-full shadow-lg transform hover:-translate-y-1 hover:shadow-xl transition-all duration-300">
              Get This Site Built For You
            </a>
          </div>
        </section>
      </div>
    ))}
  </div>
</SiteLayout>
